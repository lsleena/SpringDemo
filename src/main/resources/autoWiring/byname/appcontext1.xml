<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!-- defining CashPayment bean -->
    <bean id="payment" class="com.leena.spring.autoWiring.CashPayment" />

    <!-- Defining PayServiceImpl bean and injecting payment bean -->
    <bean id="payServiceBean" class="com.leena.spring.autoWiring.PayServiceImpl" autowire="byName">
        <property name="amount" value="20" />
    </bean>
</beans>

